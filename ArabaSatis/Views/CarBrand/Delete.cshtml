@model EntityLayer.Entities.CarBrand
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<h1 class="bg-info my-7 w-100 text-center text-white">Araba Marka Silme</h1>

<form action="Delete" method="post">
    <div class="form-group row">
        <input type="hidden" asp-for="CarBrandId" />
        <label for="text" class="col-4 col-form-label">Araba Tip ID</label>
        <div class="col-8">
            <input id="text" asp-for="CarBrandId" disabled type="text" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label for="text1" class="col-4 col-form-label">Araba Tip Adı </label>
        <div class="col-8">
            <input id="text1" asp-for="CarBrandName" disabled type="text" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label for="text2" class="col-4 col-form-label">Araba tip Özellikleri</label>
        <div class="col-8">
            <input id="text2" asp-for="CarBrandDescription" disabled type="text" class="form-control">
        </div>
    </div>

    <div class="form-group row">
        <div class="offset-4 col-8">
            <button name="submit" type="submit" class="btn btn-danger"><i class="bi bi-trash-fill">Sil</i></button>
        </div>
        <div class="offset-4 col-8">
            <a asp-action="Index" class="btn btn-warning">İptal</a>
        </div>
    </div>
</form>