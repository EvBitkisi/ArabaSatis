@model EntityLayer.Entities.CarBrand
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<h1 class="bg-info my-7 w-100 text-center text-white">Yeni Araba Markası</h1>

<form action="Create" method="post">
    <div class="form-group row">
        <label for="text" class="col-4 col-form-label">Araba Marka Adı</label>
        <div class="col-8">
            <input id="text" asp-for="CarBrandName" type="text" class="form-control">
            <span asp-validation-for="CarBrandName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label for="text1" class="col-4 col-form-label">Araba Marka Özellikleri</label>
        <div class="col-8">
            <input id="text1" asp-for="CarBrandDescription" type="text" class="form-control">
            <span asp-validation-for="CarBrandDescription" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="offset-4 col-8">
            <button name="submit" type="submit" class="btn btn-primary">Kaydet</button>
        </div>
    </div>
</form>