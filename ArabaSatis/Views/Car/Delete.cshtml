@model EntityLayer.Entities.Car
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<h1 class="bg-info my-7 w-100 text-center text-white">Araba Silme</h1>

<form action="Delete" method="post">
    <div class="form-group row">
        <input type="hidden" asp-for="CarId" />
        <label for="text" class="col-4 col-form-label">Araba Adı</label>
        <div class="col-8">
            <input id="text" asp-for="CarName" disabled type="text" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label for="text1" class="col-4 col-form-label">Fiyatı</label>
        <div class="col-8">
            <input id="text1" asp-for="CarPrice" disabled type="text" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label for="text2" class="col-4 col-form-label">Özellikleri</label>
        <div class="col-8">
            <input id="text2" asp-for="CarDescription" disabled type="text" class="form-control">
        </div>
    </div>

    <div class="form-group row">
        <label for="text3" class="col-4 col-form-label">Beygir Gücü</label>
        <div class="col-8">
            <input id="text3" asp-for="CarHp" disabled type="text" class="form-control">
        </div>
    </div>

    <div class="form-group row">
        <label for="text3" class="col-4 col-form-label">Araba Kmsi</label>
        <div class="col-8">
            <input id="text3" asp-for="CarKm" disabled type="text" class="form-control">
        </div>
    </div>

    <div class="form-group row">
        <label for="text3" class="col-4 col-form-label">Koltuk Sayısı</label>
        <div class="col-8">
            <input id="text3" asp-for="Seats" disabled type="text" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label for="text4" class="col-4 col-form-label">Üretim Yılı</label>
        <div class="col-8">
            <input id="text4" asp-for="Years" disabled type="text" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label for="text4" class="col-4 col-form-label">Araba Tipi Id</label>
        <div class="col-8">
            <input id="text4" asp-for="CarTypeId" disabled type="text" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label for="text4" class="col-4 col-form-label">Araba Marka Id</label>
        <div class="col-8">
            <input id="text4" asp-for="CarBrandId" disabled type="text" class="form-control">
        </div>
    </div>


    <div class="form-group row">
        <div class="offset-4 col-8">
            <button name="submit" type="submit" class="btn btn-danger"><i class="bi bi-trash-fill">Sil</i></button>
        </div>
        <div class="offset-4 col-8">
            <a asp-action="Index" class="btn btn-warning">İptal</a>
        </div>
    </div>
</form>